@model WFS.web.Models.RootModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_RootLayout.cshtml";
}
 

<div class="page-content">

    <nav class="page-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Tickets</a></li>
            <li class="breadcrumb-item active" aria-current="page">All Tickets</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body"> 
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        User
                                    </th> 
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Sended Date
                                    </th>
                                    <th>
                                        #
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.tickets)
                                {
                                    <tr>
                                        <td class="py-1">
                                            <img src="http://via.placeholder.com/36x36" alt="image">
                                        </td>
                                        <td>@item.SenderName</td>
                                        <td>@item.Title</td>
                                        <td>@item.postTime</td>
                                        <td><button class="btn btn-light" onclick="reply(@item.TicketId)">Reply</button></td>
                                    </tr>
                                } 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function reply(id) {
        $.ajax({
            url: "@Url.Action("Reply", "Support")",
            type: "POST",
            data: { tickeId: id },
            success: function (data) {
                if (data.result == true) {
                    showSwal("success", data.message);
                    setTimeout(function () { 
                        window.location.href = "@Url.Action("Index","Support")";
                    }, 2000);  
                }
                else {
                    showSwal("error", data.message);
                }
            }
        }); 
    }
</script>