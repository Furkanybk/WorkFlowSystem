@model WFS.web.Models.MainModel
@{
    ViewBag.Title = "FirmInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var i = 0;

    string dir;

    if (Model.currentUser.ownFirm.Logo == "firm_default.jpeg")
    {
        dir = "firm";
    }
    else
    {
        dir = Model.firm.Name;
    }

}


<style>
    .circular-square {
        border-top-left-radius: 50% 50%;
        border-top-right-radius: 50% 50%;
        border-bottom-right-radius: 50% 50%;
        border-bottom-left-radius: 50% 50%;
    }
</style>

<div class="profile-page tx-13" style="margin:10px;">
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="profile-header">
                <div class="cover">
                    <div class="gray-shade"></div>
                    <figure>
                        <img src="~/Images/FirmLogo/firm_company.jpg" class="img-fluid" alt="profile cover">
                    </figure>
                    <div class="cover-body d-flex justify-content-between align-items-center">
                        <div>
                            <img class="img-fluid circular-square" src="~/Images/FirmLogo/@dir/256/@Model.firm.Logo" alt="profile">
                            <span class="profile-name">@Model.firm.Name</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row profile-body">
        <!-- left wrapper start -->
        <div class="d-none d-md-block col-md-4 col-xl-3 left-wrapper">
            <div class="card rounded">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h6 class="card-title mb-0">Hakkında</h6>
                    </div>
                    <div class="mt-3">
                        <label class="tx-11 font-weight-bold mb-0 text-uppercase">Katıldı</label>
                        <p class="text-muted">@Model.firm.Register_Date</p>
                    </div>
                    <div class="mt-3">
                        <label class="tx-11 font-weight-bold mb-0 text-uppercase">Adres</label>
                        <p class="text-muted">@Model.firm.Address</p>
                    </div>
                    <div class="mt-3">
                        <label class="tx-11 font-weight-bold mb-0 text-uppercase">Email</label>
                        <p class="text-muted">@Model.firm.Mail</p>
                    </div>
                    <div class="mt-3">
                        <label class="tx-11 font-weight-bold mb-0 text-uppercase">Tel</label>
                        <p class="text-muted">@Model.firm.Contact</p>
                    </div>
                    <div class="mt-3">
                        <label class="tx-11 font-weight-bold mb-0 text-uppercase">Fax</label>
                        <p class="text-muted">@Model.firm.Fax</p>
                    </div>
                    <div class="mt-3">
                        <label class="tx-11 font-weight-bold mb-0 text-uppercase">Website</label>
                        <p class="text-muted">@Model.firm.Url</p>
                    </div>
                    @*<div class="mt-3 d-flex social-links">
                            <a href="javascript:;" class="btn d-flex align-items-center justify-content-center border mr-2 btn-icon github">
                                <i data-feather="github" data-toggle="tooltip" title="github.com/"></i>
                            </a>
                            <a href="javascript:;" class="btn d-flex align-items-center justify-content-center border mr-2 btn-icon twitter">
                                <i data-feather="twitter" data-toggle="tooltip" title="twitter.com/"></i>
                            </a>
                            <a href="javascript:;" class="btn d-flex align-items-center justify-content-center border mr-2 btn-icon instagram">
                                <i data-feather="instagram" data-toggle="tooltip" title="instagram.com/"></i>
                            </a>
                        </div>*@
                    <a href="@Url.Action("EditFirm","Firm")" class="btn btn-primary mr-2 mb-2 mb-md-0" style="float:right">Düzenle</a>
                </div>
            </div>
        </div>
        <!-- left wrapper end -->
        @if (Model.wfsModel != null)
        {
            <div class="d-none d-xl-block col-xl-3 right-wrapper">
                <div class="row">
                    <div class="col-md-12 grid-margin">
                        <div class="card rounded">
                            <div class="card-body">
                                <h6 class="card-title">Partnerler</h6>
                                @foreach (var item in Model.wfsModel)
                                {
                                    <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                                        <div class="d-flex align-items-center hover-pointer">
                                            <div class="ml-2">
                                                <p>@item.Partner.Client.ManagerFirm.Name</p>
                                                <p class="tx-11 text-muted">@item.Partner.Client.Name @item.Partner.Client.Surname</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <a href="@Url.Action("PartnerList", "Partner")" class="btn btn-primary mr-2 mb-2 mb-md-0" style="float:right">Düzenle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.wfsModel != null)
        {
            <div class="d-none d-xl-block col-xl-3 right-wrapper">
                <div class="row">
                    <div class="col-md-12 grid-margin">
                        <div class="card rounded">
                            <div class="card-body">
                                <h6 class="card-title">Departmanlar</h6>
                                @foreach (var item in Model.wfsModel.SelectMany(q => q.Departments))
                                {
                                    <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                                        <div class="d-flex align-items-center hover-pointer">
                                            <div class="ml-2">
                                                <p>@item.Name</p>
                                                <p class="tx-11 text-muted">@item.Title</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <a href="@Url.Action("DepartmentList", "Department")" class="btn btn-primary mr-2 mb-2 mb-md-0" style="float:right">Düzenle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.wfsModel != null)
        {
            <div class="d-none d-xl-block col-xl-3 right-wrapper">
                <div class="row">
                    <div class="col-md-12 grid-margin">
                        <div class="card rounded">
                            <div class="card-body">
                                <h6 class="card-title">İş akışları</h6>
                                @foreach (var item in Model.wfsModel.SelectMany(q => q.WorkFlows))
                                {
                                    <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                                        <div class="d-flex align-items-center hover-pointer">
                                            <div class="ml-2">
                                                <p>@item.Name</p>
                                                <p class="tx-11 text-muted">@item.Title</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <a href="@Url.Action("WorkflowList", "WorkFlow")" class="btn btn-primary mr-2 mb-2 mb-md-0" style="float:right">Düzenle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>