                    url: "@Url.Action("ResetCache", "Notification")",
                    type: "POST",
                    data: { }, 
                    success: function (data) { 
                        console.log("reseted");
                    }
                });
            }
            setInterval(resetCache, 60000);*@
         
    </script>

</body>
</html>